<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.tasktracker.viewModel.AddEditActivityViewModel" />

        <variable
            name="handler"
            type="com.example.tasktracker.AddEditActivity.AddEditActivityHandler" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                app:liftOnScroll="true">
                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">
                        <ImageView
                            android:id="@+id/back_imageView"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/baseline_arrow_back_ios_24"
                            app:tint="@color/colorIcon"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{handler::onBackClick}"
                            android:contentDescription="@string/back" />

                        <LinearLayout
                            android:id="@+id/last_edited_on_linear_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/back_imageView"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/last_edited_on"
                                android:textColor="@color/colorIcon"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/background_search"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_medium"
                                android:padding="@dimen/_2sdp"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/date_time_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorIcon"
                                android:text="@{viewModel.getNote().lastUpdateDateTime}"
                                android:background="@drawable/background_search"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/roboto_medium"
                                android:padding="@dimen/_2sdp"/>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/pin_unpin_imageView"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_toStartOf="@id/save_imageView"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:clickable="true"
                            android:src="@drawable/pin_unfilled"
                            android:onClick="@{handler::pinUnpinNote}"
                            android:focusable="true"
                            android:contentDescription="@string/pin"/>
                        <!--
                        android:src="@drawable/control_pins"
                            app:isPinned="@{viewModel.getNote().isPinned()}"
                             -->


                        <ImageView
                            android:id="@+id/save_imageView"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/baseline_save_24"
                            app:tint="@color/colorIcon"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{handler::onSaveClick}"
                            android:contentDescription="@string/save"/>

                    </RelativeLayout>
                </com.google.android.material.appbar.MaterialToolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_40sdp"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/add_note_image_main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="UseCompoundDrawables">
                        <LinearLayout
                            android:id="@+id/add_image_linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_search"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            >
                            <ImageView
                                android:id="@+id/add_image_imageView"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/add_image"
                                android:layout_margin="@dimen/_12sdp"
                                android:contentDescription="@string/add_image"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/add_image_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/colorHint"
                                android:visibility="visible"
                                android:text="@string/add_image"/>


                        </LinearLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/note_image_constraint_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:visibility="gone"
                            android:layout_marginEnd="@dimen/_10sdp">
                            <ImageView
                                android:id="@+id/note_image_imageview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"/>

                            <ImageButton
                                android:id="@+id/delete_image_button"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:background="@drawable/background_delete_image_btn"
                                android:scaleType="centerInside"
                                android:src="@drawable/baseline_delete_24"
                                app:layout_constraintBottom_toBottomOf="@id/note_image_imageview"
                                app:layout_constraintEnd_toEndOf="@id/note_image_imageview"
                                app:layout_constraintHorizontal_bias="0.95"
                                app:layout_constraintStart_toStartOf="@id/note_image_imageview"
                                app:layout_constraintTop_toTopOf="@id/note_image_imageview"
                                app:layout_constraintVertical_bias="0.0" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>



                    <EditText
                        android:id="@+id/title_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:background="@null"
                        android:fontFamily="@font/oswald_semibold"
                        android:hint="@string/title"
                        android:text="@={viewModel.getNote().title}"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_below="@id/add_note_image_main_layout"
                        android:textColorHint="@color/colorHint"/>

                    <LinearLayout
                        android:id="@+id/note_desc_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_edittext"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/note_background_imageView"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            />
                        <com.yahiaangelo.markdownedittext.MarkdownEditText
                            android:id="@+id/note_description_markdownEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:background="@null"
                            android:fontFamily="@font/roboto_medium"
                            android:inputType="textMultiLine"
                            android:importantForAutofill="no"
                            android:includeFontPadding="false"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_18ssp"
                            android:textColor="@color/white"
                            android:hint="@string/note"
                            android:textColorHint="@color/colorHint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/add_url_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@id/note_desc_linear_layout"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:background="@drawable/background_search">
                        <ImageView
                            android:id="@+id/add_url_left_imageview"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:src="@drawable/baseline_add_link_24"
                            app:tint="@color/colorIcon"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/add_url_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="@string/add_url"
                            android:textSize="@dimen/_14ssp"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/colorHint"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/add_url_relative_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_below="@id/add_url_linear_layout"
                        android:visibility="gone"
                        android:background="@drawable/background_search">

                        <ImageButton
                            android:id="@+id/add_url_image_button"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/baseline_add_link_24"
                            android:background="@drawable/background_delete_image_btn"
                            app:tint="@color/colorIcon"/>

                        <ImageButton
                            android:id="@+id/delete2_image_button"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_toStartOf="@id/add_url_image_button"
                            android:background="@drawable/background_delete_image_btn"
                            android:scaleType="centerInside"
                            android:src="@drawable/baseline_delete_24"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/url_placeholder_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/add_url_image_button"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@null"
                            android:fontFamily="@font/roboto_medium"
                            android:inputType="textMultiLine"
                            android:importantForAutofill="no"
                            android:includeFontPadding="false"
                            android:textColor="@color/colorSecondary"
                            android:textSize="@dimen/_16sdp"/>



                    </RelativeLayout>

                    <!-- Dummy view to add empty space below the scrollview -->
                    <View
                        android:id="@+id/dummy_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_below="@id/add_url_relative_layout"/>
                </RelativeLayout>

            </ScrollView>
            <LinearLayout
                android:id="@+id/markdown_styles_bar_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_45sdp"
                android:visibility="gone">
                <com.yahiaangelo.markdownedittext.MarkdownStylesBar
                    android:id="@+id/markdown_styles_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"/>
            </LinearLayout>
                <include
                    android:id="@+id/bottom_sheet"
                    layout="@layout/bottom_sheet_layout"
                    app:secondaryHandler="@{handler}"
                    />



        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

